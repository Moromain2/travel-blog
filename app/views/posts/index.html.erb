<%= render 'admin-nav' %>

<%= render 'navbar' %>

<div class="page-container welcome">

  <h2>Tous les articles</h2>
  <div class="decor-line"></div>

  <div class="row">

    <% @posts.each do |post| %>

          <div class="col-lg-4 col-md-6 col-sm-12 post-card">
            <div class="image-crop">
              <%= image_tag post.image.url(:medium) %>
            </div>
            <h3><%= post.title.first(35) %></h3>
            <p class="post-summary"><%= post.content.first(200) %>...</p>
            <p class="date"><span>Publi√© le :</span> <%= post.created_at.strftime("%A, %b %d") %></p>
            <%= link_to 'Lire', post, :class => 'action-btn no-margin' %>
            <a href="#" class="admin-btn">Modifier</a>
            <a href="#" class="admin-btn danger-btn">Supprimer</a>
          </div>

    <% end %>

  </div>

  <%= will_paginate @posts %>

</div>

<%= render 'footer' %>
