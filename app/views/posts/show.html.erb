<% if admin_signed_in? %>
  <%= render 'admin-nav' %>
<% end %>

<%= render 'navbar' %>

<div class="page-container article-view">

  <h1><%= @post.title %></h1><br>

  <%= image_tag @post.image.url(:large) %>

  <p><%= @post.content %></p><br>
  <br>
  <% if admin_signed_in? %>
    <%= link_to "Editer l'article", edit_post_path(@post), :class => 'admin-btn no-margin' %>
    <%= link_to "Supprimer l'article", post_path(@post), method: :delete, data: { confirm: "Veux tu vraiment supprimer cet article ? " }, :class => 'admin-btn danger-btn' %>
  <% end %>

</div>

<%= render 'footer' %>
